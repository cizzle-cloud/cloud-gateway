FROM golang:1.23.2 AS build

RUN mkdir -p /root/.ssh

RUN --mount=type=secret,id=ssh,target=/run/secrets/ssh_key \
    cat /run/secrets/ssh_key > /root/.ssh/id_rsa && \
    chmod 600 /root/.ssh/id_rsa && \
    ssh-keyscan github.com >> /root/.ssh/known_hosts && \
    git config --global url."git@github.com:".insteadOf "https://github.com/"

WORKDIR /api-gateway

COPY go.mod go.sum ./
RUN go mod download && go mod verify

COPY . ./

# Build the Go binary
RUN CGO_ENABLED=0 GOOS=linux go build -o main

FROM alpine:latest

WORKDIR /api-gateway

# Copy the binary from the build stage
COPY --from=build /api-gateway/main /api-gateway/main

# Add a non-root user and group to the container
RUN addgroup -S nonroot && adduser -S nonroot -G nonroot

# Switch to the non-root user
USER nonroot

CMD ["/api-gateway/main"]